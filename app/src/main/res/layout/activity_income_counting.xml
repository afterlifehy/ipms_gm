<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffe8eef6">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_light_top_bg" />

    <include
        android:id="@+id/layout_toolbar"
        layout="@layout/layout_comment_toolbar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_toolbar">

        <com.aries.ui.view.radius.RadiusLinearLayout
            android:id="@+id/rll_todaySummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_13"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_marginEnd="@dimen/dp_13"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp_90"
            app:rv_backgroundColor="@color/white"
            app:rv_radius="@dimen/dp_10">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_47"
                android:background="@mipmap/ic_income_bg_1"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_13"
                android:text="@string/账单汇总"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_19" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/dp_13"
                android:paddingTop="@dimen/dp_16"
                android:paddingEnd="@dimen/dp_13"
                android:paddingBottom="@dimen/dp_16">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_incomeTimeTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="收费时间"
                    android:textColor="@color/color_ff04a091"
                    android:textSize="@dimen/sp_19" />

                <TextView
                    android:id="@+id/tv_incomeTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    tools:text="555.00元" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/dp_13"
                android:paddingTop="@dimen/dp_16"
                android:paddingEnd="@dimen/dp_13"
                android:paddingBottom="@dimen/dp_16">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_totalIncomeTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="收费总额"
                    android:textColor="@color/color_ff04a091"
                    android:textSize="@dimen/sp_19" />

                <TextView
                    android:id="@+id/tv_totalIncome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    tools:text="555.00元" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/dp_13"
                android:paddingTop="@dimen/dp_16"
                android:paddingEnd="@dimen/dp_13"
                android:paddingBottom="@dimen/dp_16">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_qrPayTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="二维码支付"
                    android:textColor="@color/color_ff04a091"
                    android:textSize="@dimen/sp_19" />

                <TextView
                    android:id="@+id/tv_qrPay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    tools:text="555.00元" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/dp_13"
                android:paddingTop="@dimen/dp_16"
                android:paddingEnd="@dimen/dp_13"
                android:paddingBottom="@dimen/dp_16">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_cashPayTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="现金支付"
                    android:textColor="@color/color_ff04a091"
                    android:textSize="@dimen/sp_19" />

                <TextView
                    android:id="@+id/tv_cashPay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    tools:text="555.00元" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/dp_13"
                android:paddingTop="@dimen/dp_16"
                android:paddingEnd="@dimen/dp_13"
                android:paddingBottom="@dimen/dp_16">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_refundTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="退款信息"
                    android:textColor="@color/color_ff04a091"
                    android:textSize="@dimen/sp_19" />

                <TextView
                    android:id="@+id/tv_refund"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    tools:text="555.00元" />
            </FrameLayout>
        </com.aries.ui.view.radius.RadiusLinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.aries.ui.view.radius.RadiusTextView
        android:id="@+id/rtv_print"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_47"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dp_13"
        android:layout_marginEnd="@dimen/dp_13"
        android:layout_marginBottom="@dimen/dp_13"
        android:gravity="center"
        android:text="@string/打印"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_19"
        app:rv_backgroundColor="@color/color_ff04a091"
        app:rv_radius="@dimen/dp_7" />
</RelativeLayout>