<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffe8f0ef"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_deep_top_bg" />

    <include
        android:id="@+id/layout_toolbar"
        layout="@layout/layout_comment_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_toolbar"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_13"
        android:paddingTop="@dimen/dp_6"
        android:paddingEnd="@dimen/dp_13"
        android:paddingBottom="@dimen/dp_13">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/车牌号"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_19" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="@string/订单金额"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_19" />
        </FrameLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_carLicense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_24"
                android:textStyle="bold"
                tools:text="沪A36N81" />

            <TextView
                android:id="@+id/tv_orderAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:gravity="bottom"
                android:textColor="@color/white"
                tools:text="15.00元" />
        </FrameLayout>

        <com.aries.ui.view.radius.RadiusLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:orientation="vertical"
            android:paddingStart="@dimen/dp_13"
            android:paddingEnd="@dimen/dp_13"
            android:paddingBottom="@dimen/dp_13"
            app:rv_backgroundColor="@color/white"
            app:rv_radius="@dimen/dp_7">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_54"
                android:layout_gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/已支付"
                    android:textColor="@color/color_ff666666"
                    android:textSize="@dimen/sp_19" />

                <TextView
                    android:id="@+id/tv_paidAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:textColor="@color/color_ff1a1a1a"
                    android:textSize="@dimen/sp_19"
                    tools:text="0.00元" />
            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/color_ffcccccc" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_54"
                android:layout_gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/应支付"
                    android:textColor="@color/color_ff666666"
                    android:textSize="@dimen/sp_19" />

                <TextView
                    android:id="@+id/tv_yuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="@string/元"
                    android:textColor="@color/color_ff1a1a1a"
                    android:textSize="@dimen/sp_19" />

                <com.aries.ui.view.radius.RadiusTextView
                    android:id="@+id/rtv_payableAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_47"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_12"
                    android:layout_toStartOf="@+id/tv_yuan"
                    android:gravity="center"
                    android:paddingStart="@dimen/dp_28"
                    android:paddingEnd="@dimen/dp_28"
                    android:textColor="@color/color_ff1a1a1a"
                    android:textSize="@dimen/sp_24"
                    android:textStyle="bold"
                    app:rv_backgroundColor="@color/color_fff0f0f0"
                    app:rv_radius="@dimen/dp_7"
                    tools:text="15.00" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/color_ffcccccc" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_47"
                android:layout_marginTop="@dimen/dp_16"
                android:orientation="horizontal"
                android:visibility="gone">

                <com.aries.ui.view.radius.RadiusFrameLayout
                    android:id="@+id/rfl_appPay"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/dp_6"
                    android:layout_weight="1"
                    app:rv_backgroundColor="@color/color_ffeefaf9"
                    app:rv_radius="@dimen/dp_7"
                    app:rv_strokeColor="@color/color_ff04a091"
                    app:rv_strokeWidth="@dimen/dp_1">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:drawableStart="@mipmap/ic_app_pay"
                        android:drawablePadding="@dimen/dp_13"
                        android:gravity="center"
                        android:text="@string/APP支付"
                        android:textColor="@color/color_ff04a091"
                        android:textSize="@dimen/sp_19"
                        android:textStyle="bold" />
                </com.aries.ui.view.radius.RadiusFrameLayout>

                <com.aries.ui.view.radius.RadiusFrameLayout
                    android:id="@+id/rfl_refusePay"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dp_6"
                    android:layout_weight="1"
                    app:rv_backgroundColor="@color/color_ffffebeb"
                    app:rv_radius="@dimen/dp_7"
                    app:rv_strokeColor="@color/color_fff70f0f"
                    app:rv_strokeWidth="@dimen/dp_1">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:drawableStart="@mipmap/ic_refuse_pay"
                        android:drawablePadding="@dimen/dp_13"
                        android:gravity="center"
                        android:text="@string/拒绝支付"
                        android:textColor="@color/color_fff70f0f"
                        android:textSize="@dimen/sp_19"
                        android:textStyle="bold" />
                </com.aries.ui.view.radius.RadiusFrameLayout>
            </LinearLayout>

            <com.aries.ui.view.radius.RadiusFrameLayout
                android:id="@+id/rfl_scanPay"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_47"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/dp_20"
                app:rv_backgroundColor="@color/color_ff04a091"
                app:rv_radius="@dimen/dp_7">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableStart="@mipmap/ic_scan"
                    android:drawablePadding="@dimen/dp_14"
                    android:gravity="center"
                    android:text="@string/扫码支付"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_19"
                    android:textStyle="bold" />
            </com.aries.ui.view.radius.RadiusFrameLayout>

        </com.aries.ui.view.radius.RadiusLinearLayout>
    </LinearLayout>
</RelativeLayout>