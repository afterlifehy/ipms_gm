<?xml version="1.0" encoding="utf-8"?>
<com.aries.ui.view.radius.RadiusLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp_17"
    android:paddingTop="@dimen/dp_19"
    android:paddingEnd="@dimen/dp_17"
    android:paddingBottom="@dimen/dp_27"
    app:rv_backgroundColor="@color/white"
    app:rv_radius="@dimen/dp_7">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/提示"
        android:textColor="@color/color_ff666666"
        android:textSize="@dimen/sp_19" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_25"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="@dimen/dp_5"
        android:textColor="@color/color_ff1a1a1a"
        android:textSize="@dimen/sp_19"
        android:textStyle="bold"
        tools:text="下单成功！当前车辆有欠费记录，是否追缴？" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_37"
        android:orientation="horizontal">

        <com.aries.ui.view.radius.RadiusTextView
            android:id="@+id/rtv_left"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_47"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/color_ff666666"
            android:textSize="@dimen/sp_19"
            app:rv_backgroundColor="@color/color_fff5f5f5"
            app:rv_radius="@dimen/dp_7"
            app:rv_strokeColor="@color/color_ffececec"
            app:rv_strokeWidth="@dimen/dp_1"
            tools:text="是" />

        <com.aries.ui.view.radius.RadiusTextView
            android:id="@+id/rtv_right"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_47"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_19"
            app:rv_backgroundColor="@color/color_ff04a091"
            app:rv_radius="@dimen/dp_7"
            app:rv_strokeColor="@color/color_ffececec"
            app:rv_strokeWidth="@dimen/dp_1"
            tools:text="否" />
    </LinearLayout>
</com.aries.ui.view.radius.RadiusLinearLayout>